<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/item_storage_list">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_item_storage_list"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@android:color/holo_orange_light" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_profile_item_storage_list"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_item_storage_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박상영" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_item_storage_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8900" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원 / " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="캐리어 수량 " />

            <TextView
                android:id="@+id/tv_amount_item_storage_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_am_pm_item_storage_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="오후" />

        <TextView
            android:id="@+id/tv_hour_item_storage_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : " />

        <TextView
            android:id="@+id/tv_minute_item_storage_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45" />
    </LinearLayout>
</RelativeLayout>