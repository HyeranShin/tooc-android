<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReserveConfirmFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="3sp"
            android:text="tooc"
            android:textColor="#1fbfc8"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/img_qr" />

                <ImageView
                    android:id="@+id/iv_qrcode_scan_reserve_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bt_scan"
                    android:layout_marginTop="71.4dp"
                    />

                <ImageView
                    android:id="@+id/btn_reserve_number_input"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bt_write"
                    android:layout_marginTop="14dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="226dp"
                android:layout_height="2dp"
                android:background="#1fbfc8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                />
        </RelativeLayout>


    </LinearLayout>

</FrameLayout>