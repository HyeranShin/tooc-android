<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_storeimage_recentstore"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/background_dark" />

    <TextView
        android:id="@+id/tv_name_recentstore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/kopub_medium"
        android:text="프로마치"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iv_storeimage_recentstore"
        app:layout_constraintTop_toTopOf="@+id/iv_storeimage_recentstore" />

    <TextView
        android:id="@+id/tv_addr_recentstore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/kopub_light"
        android:text="성북구 안암동 123번지"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_name_recentstore"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_recentstore" />

    <TextView
        android:id="@+id/tv_time_recentstore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/kopub_light"
        android:text="매일 11:00 - 22:00"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_addr_recentstore"
        app:layout_constraintTop_toBottomOf="@+id/tv_addr_recentstore" />

    <Button
        android:id="@+id/button6"
        android:layout_width="68dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_background_full"
        android:fontFamily="@font/kopub_medium"
        android:text="예약하기"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/button7"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toTopOf="@+id/button7" />

    <Button
        android:id="@+id/button7"
        android:layout_width="68dp"
        android:layout_height="23dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_background_empty"
        android:fontFamily="@font/kopub_medium"
        android:text="리뷰쓰기"
        android:textColor="@color/mainColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_storeimage_recentstore"
        app:layout_constraintStart_toEndOf="@+id/iv_storeimage_recentstore"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_recentstore" />

</android.support.constraint.ConstraintLayout>