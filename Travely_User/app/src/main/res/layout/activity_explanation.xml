<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join.ExplanationActivity"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_explanation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/indicator_explanation">
    </android.support.v4.view.ViewPager>

    <com.hyeran.android.travely_user.join.circleIndicator
        android:id="@+id/indicator_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_skip_explanation"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp">
    </com.hyeran.android.travely_user.join.circleIndicator>

    <Button
        android:id="@+id/btn_skip_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>