<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp"
    android:layout_height="199dp"
    android:background="@drawable/rectangle_round_dialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/kopub_bold"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:text="확인 버튼을 누르면 예약이 취소됩니다."
            android:textColor="#545454"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopub_medium"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:text="예약을 취소하시겠습니까?"
            android:textColor="#b3000000"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_reserve_cancel_yes"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bt_pop_ok"
                android:fontFamily="@font/kopub_medium"
                android:text="확인"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_reserve_cancel_no"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/bt_pop_close"
                android:fontFamily="@font/kopub_medium"
                android:text="닫기"
                android:textColor="@color/mainColor"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>