<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/iv_more_item_location_map"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp">

        <ImageView
            android:id="@+id/iv_icon_item_location_map"
            android:layout_width="17dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:src="@drawable/ic_place" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/iv_icon_item_location_map"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name_item_location_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="#262626"
                android:fontFamily="@font/kopub_medium"
                android:text="홍대입구역" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="("
                android:textSize="16sp"
                android:textColor="#262626"
                android:fontFamily="@font/kopub_medium" />

            <TextView
                android:id="@+id/tv_num_item_location_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="2"
                android:textSize="16sp"
                android:textColor="#262626"
                android:fontFamily="@font/kopub_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=")"
                android:textSize="16sp"
                android:textColor="#262626"
                android:fontFamily="@font/kopub_medium" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow_item_location_map"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:src="@drawable/ic_arrow_down" />

        </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_more_item_location_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>

</LinearLayout>