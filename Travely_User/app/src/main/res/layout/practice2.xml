<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical"
    tools:context=".reserve.ReserveFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/mainColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/kopub_bold"
            android:text="예약하기"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_back_reservation" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kopub_bold"
                    android:text="짐 종류"
                    android:textColor="#494949"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="12dp"
                        android:fontFamily="@font/kopub_medium"
                        android:text="요금정보"
                        android:textColor="#656565"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_info" />
                </LinearLayout>
            </RelativeLayout>

            <CheckBox
                android:id="@+id/cb_carrier_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:fontFamily="@font/kopub_medium"
                android:gravity="center_vertical"
                android:text="캐리어"
                android:textColor="#494949"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/linear_carrier_more_reserve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/kopub_medium"
                    android:text="수량선택"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="13dp">


                    <LinearLayout
                        android:id="@+id/relative_carrier_amount_reserve"
                        android:layout_width="164dp"
                        android:layout_height="38dp"
                        android:background="@drawable/box_number"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <RelativeLayout
                            android:id="@+id/iv_carrier_amount_down_reserve"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="1dp"
                                android:layout_centerInParent="true"
                                android:background="#8d8d8d" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="6dp"
                            android:background="#8d8d8d" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/tv_carrier_changing_amount_reserve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/kopub_medium"
                                android:text="1"
                                android:textColor="#494949"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="6dp"
                            android:background="#8d8d8d" />

                        <RelativeLayout
                            android:id="@+id/iv_carrier_amount_up_reserve"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="1dp"
                                android:layout_centerInParent="true"
                                android:background="#8d8d8d" />

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="8dp"
                                android:layout_centerInParent="true"
                                android:background="#8d8d8d" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_carrier_amount_reserve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopub_medium"
                            android:text="1"
                            android:textColor="#262626"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopub_medium"
                            android:text="개 : "
                            android:textColor="#262626"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_price_carrier_reserve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopub_medium"
                            android:text="3500"
                            android:textColor="#262626"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopub_medium"
                            android:text="원"
                            android:textColor="#262626"
                            android:textSize="14sp" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5pt"
                    android:layout_marginBottom="25dp"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginTop="29dp"
                    android:background="#C6C6C6">
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <CheckBox
                    android:id="@+id/cb_etc_reserve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:fontFamily="@font/kopub_medium"
                    android:gravity="center_vertical"
                    android:text="일반 짐"
                    android:textColor="#494949"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/ic_ask" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_etc_more_reserve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/kopub_medium"
                    android:text="수량선택"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:id="@+id/gesture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="13dp">


                    <LinearLayout
                        android:id="@+id/relative_etc_amount_reserve"
                        android:layout_width="164dp"
                        android:layout_height="38dp"
                        android:background="@drawable/box_number"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <RelativeLayout
                            android:id="@+id/iv_etc_amount_down_reserve"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="1dp"
                                android:layout_centerInParent="true"
                                android:background="#8d8d8d" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="6dp"
                            android:background="#8d8d8d" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/tv_etc_changing_amount_reserve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/kopub_medium"
                                android:text="1"
                                android:textColor="#494949"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="6dp"
                            android:background="#8d8d8d" />

                        <RelativeLayout
                            android:id="@+id/iv_etc_amount_up_reserve"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="1dp"
                                android:layout_centerInParent="true"
                                android:background="#8d8d8d" />

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="8dp"
                                android:layout_centerInParent="true"
                                android:background="#8d8d8d" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_etc_amount_reserve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopub_medium"
                            android:text="1"
                            android:textColor="#262626"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopub_medium"
                            android:text="개 : "
                            android:textColor="#262626"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_price_etc_reserve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopub_medium"
                            android:text="3500"
                            android:textColor="#262626"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopub_medium"
                            android:text="원"
                            android:textColor="#262626"
                            android:textSize="14sp" />
                    </LinearLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5pt"
                    android:layout_marginBottom="25dp"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginTop="29dp"
                    android:background="#C6C6C6">
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_regular"
                    android:text="짐 선택 : 캐리어 "
                    android:textColor="#262626"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_result_amount_carrier_reserve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_regular"
                    android:text="0"
                    android:textColor="#262626"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_regular"
                    android:text="개, "
                    android:textColor="#262626"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_regular"
                    android:text="일반 짐 "
                    android:textColor="#262626"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_result_amount_etc_reserve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_regular"
                    android:text="0"
                    android:textColor="#262626"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_regular"
                    android:text="개"
                    android:textColor="#262626"
                    android:textSize="14sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5pt"
                android:layout_marginBottom="23.5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="22.5dp"
                android:background="#C6C6C6"></RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/noto_medium"
                android:text="날짜 및 시간"
                android:textColor="#494949"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_regular"
                    android:text="총 "
                    android:textColor="#262626"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_regular"
                    android:text="4"
                    android:textColor="#262626"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_regular"
                    android:text="시간"
                    android:textColor="#262626"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="23dp"
                android:background="#E7E7E7"></RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/noto_medium"
                android:text="최종 결제 금액"
                android:textColor="#262626"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5pt"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="24dp"
                android:background="#C6C6C6"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/noto_regular"
                    android:text="결제금액"
                    android:textColor="#262626"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_total_price_reserve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_won_reserve"
                    android:fontFamily="@font/noto_bold"
                    android:text="0"
                    android:textColor="#4C64FD"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_won_reserve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="31dp"
                    android:fontFamily="@font/noto_bold"
                    android:text="원"
                    android:textColor="#4C64FD"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="20dp"
                android:background="#E7E7E7"></RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/noto_medium"
                android:text="결제 방법 선택"
                android:textColor="#262626"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="139dp">

                <RadioGroup
                    android:id="@+id/rg_payment_reserve"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="22dp">

                    <RadioButton
                        android:id="@+id/rb_kakaopay_reserve"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/noto_regular"
                        android:text="카카오페이"
                        android:textColor="#262626"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_cash_reserve"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/noto_regular"
                        android:text="현금 결제"
                        android:textColor="#262626"
                        android:textSize="14sp" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="24dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="*카카오페이 결제 시 예약취소 불가"
                        android:textColor="#262626"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"></RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5pt"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="20dp"
                    android:background="#C6C6C6"></RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:background="#E7E7E7"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_confirm_reserve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="17dp"
                    android:fontFamily="@font/noto_light"
                    android:text="위 내용을 확인하였으며 결제에 동의합니다."
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_reserve_reserve"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/mainColor"
                    android:fontFamily="@font/noto_regular"
                    android:text="예약하기"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>